<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/user_view_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/empty_profile"/>

    <TextView
        android:id="@+id/user_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_view_image"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/firstname_lastname"/>

    <TextView
        android:id="@+id/user_view_hometown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_view_image"
        android:layout_below="@id/user_view_name"
        android:text="@string/hometown"/>

</RelativeLayout>